{
  "name": "joj-tools",
  "displayName": "JOJ Tools",
  "description": "Tools Integration for JOJ.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:joj-tree",
    "onCommand:joj-tools.refresh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "icon": "$(refresh)",
        "command": "joj-tools.refresh",
        "title": "JOJ Tools: Refresh JOJ"
      },
      {
        "icon": "$(refresh)",
        "command": "joj-tools.refreshentry",
        "title": "JOJ Tools: Refresh JOJ Entry"
      },
      {
        "icon": "$(refresh)",
        "command": "joj-tools.submitentry",
        "title": "JOJ Tools: Refresh JOJ Entry"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "joj-tools-viewer",
          "title": "JOJ Tools",
          "icon": "./assets/joj.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "joj-tools.refresh",
          "group": "navigation",
          "when": "view == joj-tree"
        }
      ],
      "view/item/context": [
        {
          "command": "joj-tools.submitentry",
          "group": "inline",
          "when": "view == joj-tree && viewItem == homework"
        }
      ]
    },
    "views": {
      "joj-tools-viewer": [
        {
          "id": "joj-tree",
          "name": "JOJ Tree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "jsdom": "^20.0.1",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "axios": "^1.1.0"
  }
}
